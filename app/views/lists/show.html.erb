<div class="banner">
  <div>
    <h1>Welcome to the site!</h1>
    <h5>Your favorite movies everywhere</h5>
    <p><%= link_to "All lists", lists_path, id: "all_lists", class: "btn btn-primary" %></p>
    <p><%= link_to "Create new list", new_list_path, id: "new_list", class: "btn btn-primary" %></p>
  </div>
</div>

<h2> List: </h2>

<h3><%= @list.name %></h3>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
      <%= bookmark.movie.title %>, comment: <%= bookmark.comment %>
      <%= link_to "Delete movie",  list_bookmark_path(@list, bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete?"} %>
    </li>
  <% end %>
</ul>
<p><%= link_to "Add a movie to this list",  new_list_bookmark_path(@list), class: "btn btn-primary" %></p>
